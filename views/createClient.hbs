<div class="row">
    <h1 class="text-center">Create client</h1>

    {{#if error}}
        <div class="text-info text-center bg-info" style="padding: 15px; margin-bottom: 25px;">
          {{error}}
        </div>
    {{/if}}

    {{#if message}}
        <div class="text-info text-center bg-info" style="padding: 15px; margin-bottom: 25px;">
          {{message}}
        </div>
    {{/if}}


    <form class="form-horizontal col-sm-6 col-sm-offset-3" method="post">
        <div class="form-group">
            <label for="name" class="col-sm-3 control-label">Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="name" id="name" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <label for="redirect_uris" class="col-sm-3 control-label">Redirect URI</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="redirect_uris" id="redirect_uris" placeholder="redirect_uris">
            </div>
        </div>
        <div class="form-group">
            <label for="client_key" class="col-sm-3 control-label">Client key</label>
            <div class="col-sm-9">
                <input type="text" value="{{key}}" class="form-control" name="client_key" id="client_key" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="client_secret" class="col-sm-3 control-label">Client secret</label>
            <div class="col-sm-9">
                <input type="email" value="{{secret}}" class="form-control" name="client_secret" id="client_secret" disabled>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>

</div>
