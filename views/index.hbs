<div class="row">
    <div class="well center-block user--status">
      <h1 class="text-center">OpenID provider</h1>

      {{#if user}}
        <p class="text-center">{{user}}</p>
        <p>&ndsp;</p>
        <form action="/logout" method="POST">
        <button type="submit" class="btn btn-primary btn-block" value="submit">Logout</button>
        </form>
      {{else}}
        <p class="text-center">You are not logged in!</p>
      {{/if}}
    </div>
</div>