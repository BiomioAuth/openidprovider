<div class="row">
    <h1 class="text-center">Consent</h1>

    <form class="form-horizontal col-sm-6 col-sm-offset-3" method="post">
      <ul>
      {{#each scopes}}
        <li><strong>{{@key}}</strong> &mdash; {{explain}}</li>
      {{/each}}
      </ul>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="accept" class="btn btn-default" value="Accept">
                <input type="submit" name="cancel" class="btn btn-danger" value="Cancel" >
            </div>
        </div>
    </form>

</div>
