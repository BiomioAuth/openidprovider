<div id="auth">
    <h1>Sign In</h1>
    <div id="formAndQr">
        <div class="row">
            <form class="form-horizontal col-sm-6 col-sm-offset-3" method="post">
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="hidden" class="form-control" name="redirectUrl" id="redirectUrl" value="{{url}}">
                        <button type="button" class="btn btn-primary col-sm-12" onclick="App.run();return false;">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="text-center" id="qrcode">
        </div>
    </div>
    <div>
        <div id="timer"></div>
        <div class="message__holder">
            <div id="message"></div>
        </div>
        <div class="footer">
            <img class="footer__logo" src="footer-logo.png" alt="biomio logo" title="" />
            <p class="footer__text">Multi-Factor, Password-Optional Authentication Anywhere, Everywhere</p>
        </div>
    </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/auth.js"></script>
<script src="/js/jquery.qrcode.js"></script>
<script src="/js/qrcode.js"></script>
<script>
    $(function () {
        App.init({
            flow: 'token',
            idHolder: $('#email'),
            messageHolder: $('#message'),
            timerHolder:  $('#timer'),
            redirectUrl: $('#redirectUrl').val(),
            qrHolder: $('#formAndQr'),
            sessionID: '{{sessionID}}'
        });
    });
    $('.message__holder, #timer').hide();
    $('#qrcode').qrcode({
        text: '{{qrUrl}}',
        width: 200,
        height: 200
    });

</script>